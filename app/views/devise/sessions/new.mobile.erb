
<!-- views/devise/sessions/new.mobile.erb -->

<div data-role="page" id="page1">
    <div data-theme="a" data-role="header">
        <h3>
            DENvestR
        </h3>
    </div>

<div data-role="content">

<div data-role="collapsible-set" class="home_collapsibles">
<div data-role="collapsible" data-theme="d" data-collapsed="false" class="home_collapsible_hidden">

<h3 style="border-top: 1px solid #ccc;"><span class="home_collapsible_logo home_collapsible_login">&nbsp;</span>Log In</h3>			
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


		    <p><%= f.label :email %>
		    <%= f.text_field :email %></p>

		    <p><%= f.label :password %>
		    <%= f.password_field :password %></p>

		    <% if devise_mapping.rememberable? -%>
		    <div id="checkboxes2" data-role="fieldcontain">
		        <fieldset data-role="controlgroup" data-type="vertical" data-mini="true">
		      			<%= f.check_box :remember_me %> <%= f.label :remember_me %>
		        </fieldset>
		    <p><%= f.submit "Sign in", 'data-inline' => "true", 'data-theme' => "b", 'data-icon' => "plus", 'data-iconpos' => "left" %></p>
		    </div>		
		    <% end -%>
		
	
  <% end %>

</form>

</div>

<div data-role="collapsible" data-theme="d" data-collapsed="true" class="home_collapsible_hidden">
	
<h3 style="border-top: 1px solid #ccc;"><span class="home_collapsible_logo home_collapsible_login">&nbsp;</span>Need help?</h3>			
		  <%= link_to "Lost password?", new_password_path(resource_name),
		'data-role' => "button",  'data-inline' => "true" %><br />

		  <%= link_to "Sign up", new_registration_path(resource_name),
		'data-role' => "button",  'data-inline' => "true", 'data-theme' =>"e" %>
		
</div>
</div>

</div>
